<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.ez.modules.system.dao.SysOrgDao">

	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<!--<cache type="org.mybatis.caches.ehcache.EhcacheCache" />-->

	<resultMap id="SysOrg" type="com.ez.modules.system.entity.SysOrg">
        <result property="orgId" column="orgId"/>
        <result property="orgName" column="orgName"/>
        <result property="orgDescription" column="orgDescription"/>
        <result property="orgManager" column="orgManager"/>
        <result property="orgPhone" column="orgPhone"/>
        <result property="orgParentid" column="orgParentid"/>
        <result property="orgEstablishTime" column="orgEstablishTime"/>
        <result property="orgPath" column="orgPath"/>
        <result property="orgType" column="orgType"/>
	</resultMap>
	
	<sql id="selectId">
		orgId,
		orgName,
		orgDescription,
		orgManager,
		orgPhone,
		orgParentid,
		orgEstablishTime,
		orgPath,
		orgType,
		(select USERRELNM from sys_user where USERNO=orgManager) orgManageName
    </sql>
    
    <select id="findAll" resultMap="SysOrg">
		select
		<include refid="selectId" />
		from sys_org
	</select>
	
	<select id="query" resultMap="SysOrg" parameterType="com.ez.modules.system.entity.SysOrg">
		select
		<include refid="selectId" />
		from sys_org
		<include refid="querywhere"/>

	</select>
	
	<sql id="querywhere">
	<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
	<where>
		<if test="@Ognl@isNotEmpty(orgName)">
			AND orgName like '%${orgName}%'
		</if>
		<if test="@Ognl@isNotEmpty(orgDescription)">
			AND orgDescription like '%${orgDescription}%'
		</if>
		<if test="@Ognl@isNotEmpty(orgManager)">
			AND orgManager = '${orgManager}'
		</if>
		<if test="@Ognl@isNotEmpty(orgPhone)">
			AND orgPhone like '%${orgPhone}%'
		</if>
		<if test="@Ognl@isNotEmpty(orgParentid)">
			AND orgParentid = '${orgParentid}'
		</if>
		<if test="@Ognl@isNotEmpty(orgEstablishTimeBegin)">
			AND orgEstablishTime &gt;= #{orgEstablishTimeBegin}
		</if>
		<if test="@Ognl@isNotEmpty(orgEstablishTimeEnd)">
			AND orgEstablishTime &lt;= #{orgEstablishTimeEnd}
		</if>
		<if test="@Ognl@isNotEmpty(orgPath)">
			AND orgPath like '%${orgPath}%'
		</if>
		<if test="@Ognl@isNotEmpty(orgType)">
			AND orgType = '${orgType}'
		</if>

	</where>
	</sql>

	<!-- 总记录数 -->
	<select id="count" parameterType="com.ez.modules.system.entity.SysOrg" resultType="int">
		select count(0) from sys_org
		<include refid="querywhere"/>
	</select>
	
	<!-- 新增 -->
	<insert id="addAll" parameterType="com.ez.modules.system.entity.SysOrg">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="id" >
        SELECT LAST_INSERT_ID() AS ID   
    </selectKey>
		INSERT INTO sys_org (
        	orgName ,
        	orgDescription ,
        	orgManager ,
        	orgPhone ,
        	orgParentid ,
        	orgEstablishTime ,
        	orgPath ,
        	orgType 
        ) VALUES (
        	#{orgName} ,
        	#{orgDescription} ,
        	#{orgManager} ,
        	#{orgPhone} ,
        	#{orgParentid} ,
        	#{orgEstablishTime} ,
        	#{orgPath} ,
        	#{orgType} 
        )
	</insert>
	
	<!-- 新增Selective -->
	<insert id="add" parameterType="com.ez.modules.system.entity.SysOrg">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="orgId" >
	        SELECT LAST_INSERT_ID() AS ID
	</selectKey>
		INSERT INTO sys_org 
		<include refid="addtrim"/>
	</insert>
	
	<sql id="addtrim">
	<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(orgName)">
				orgName,
			</if>
			<if test="@Ognl@isNotEmpty(orgDescription)">
				orgDescription,
			</if>
			<if test="@Ognl@isNotEmpty(orgManager)">
				orgManager,
			</if>
			<if test="@Ognl@isNotEmpty(orgPhone)">
				orgPhone,
			</if>
			<if test="@Ognl@isNotEmpty(orgParentid)">
				orgParentid,
			</if>
			<if test="@Ognl@isNotEmpty(orgEstablishTime)">
				orgEstablishTime,
			</if>
			<if test="@Ognl@isNotEmpty(orgPath)">
				orgPath,
			</if>
			<if test="@Ognl@isNotEmpty(orgType)">
				orgType,
			</if>
    </trim>
    <trim prefix=" values (" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(orgName)">
				#{orgName},
			</if>
			<if test="@Ognl@isNotEmpty(orgDescription)">
				#{orgDescription},
			</if>
			<if test="@Ognl@isNotEmpty(orgManager)">
				#{orgManager},
			</if>
			<if test="@Ognl@isNotEmpty(orgPhone)">
				#{orgPhone},
			</if>
			<if test="@Ognl@isNotEmpty(orgParentid)">
				#{orgParentid},
			</if>
			<if test="@Ognl@isNotEmpty(orgEstablishTime)">
				#{orgEstablishTime},
			</if>
			<if test="@Ognl@isNotEmpty(orgPath)">
				#{orgPath},
			</if>
			<if test="@Ognl@isNotEmpty(orgType)">
				#{orgType},
			</if>
    </trim>
	</sql>
	
	<!-- 删 -->
	<delete id="delete" parameterType="String">
		DELETE FROM sys_org WHERE
		orgId = #{id} 
	</delete>
	
	<!-- 根据主键查实体 -->
	<select id="getById" parameterType="String" resultMap="SysOrg">
		SELECT <include refid="selectId" />
		    FROM sys_org 
	        WHERE 
        orgId = #{id} 
	</select>
    <select id="findAllCompany" resultMap="SysOrg">
		SELECT <include refid="selectId" />
		FROM sys_org
		WHERE
		orgType ="0"
	</select>

    <!-- 更新all -->
	<update id="updateAll" parameterType="com.ez.modules.system.entity.SysOrg">
	    UPDATE sys_org SET
	        orgName = #{orgName} ,
	        orgDescription = #{orgDescription} ,
	        orgManager = #{orgManager} ,
	        orgPhone = #{orgPhone} ,
	        orgParentid = #{orgParentid} ,
	        orgEstablishTime = #{orgEstablishTime} ,
	        orgPath = #{orgPath} ,
	        orgType = #{orgType} 
        WHERE 
	        orgId = #{orgId} 
	</update>
	
	<sql id="updateset">
	<set>
		<if test="@Ognl@isNotEmpty(orgName)">
			orgName = #{orgName},
		</if>
		<if test="@Ognl@isNotEmpty(orgDescription)">
			orgDescription = #{orgDescription},
		</if>
		<if test="@Ognl@isNotEmpty(orgManager)">
			orgManager = #{orgManager},
		</if>
		<if test="@Ognl@isNotEmpty(orgPhone)">
			orgPhone = #{orgPhone},
		</if>
		<if test="@Ognl@isNotEmpty(orgParentid)">
			orgParentid = #{orgParentid},
		</if>
		<if test="@Ognl@isNotEmpty(orgEstablishTime)">
			orgEstablishTime = #{orgEstablishTime},
		</if>
		<if test="@Ognl@isNotEmpty(orgPath)">
			orgPath = #{orgPath},
		</if>
		<if test="@Ognl@isNotEmpty(orgType)">
			orgType = #{orgType},
		</if>
    </set>
	</sql>
	
	<!-- 更新Selective -->
	<update id="modify" parameterType="com.ez.modules.system.entity.SysOrg">
	    UPDATE sys_org 
		<include refid="updateset"/>
        WHERE 
	        orgId = #{orgId} 
	</update>
	
</mapper>

