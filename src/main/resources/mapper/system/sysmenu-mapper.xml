<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.ez.modules.system.dao.SysMenuDao">

	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 -->
	<!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" />

	<resultMap id="SysMenu" type="com.ez.modules.system.entity.SysMenu">
        <result property="menuId" column="MENU_ID"/>
        <result property="menuName" column="MENU_NAME"/>
        <result property="menuUrl" column="MENU_URL"/>
        <result property="parentId" column="PARENT_ID"/>
        <result property="menuOrder" column="MENU_ORDER"/>
        <result property="menuIcon" column="MENU_ICON"/>
        <result property="menuType" column="MENU_TYPE"/>
	</resultMap>
	
	<sql id="selectId">
		MENU_ID,
		MENU_NAME,
		MENU_URL,
		PARENT_ID,
		MENU_ORDER,
		MENU_ICON,
		MENU_TYPE
    </sql>

	<sql id="selectMenutitle">
		MENU_ID as id,
		MENU_NAME as title,
		MENU_URL as href,
		PARENT_ID as parentid,
		MENU_ICON as icon
	</sql>
    
    <select id="findAll" resultMap="SysMenu" >
		select
		<include refid="selectId" />
		from sys_menu
		where PARENT_ID = '0'
		order by MENU_ORDER
	</select>


	<select id="query" resultMap="SysMenu" parameterType="com.ez.modules.system.entity.SysMenu" >
		select
		<include refid="selectId" />
		from sys_menu
		<include refid="querywhere"/>
	</select>

		<sql id="querywhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
		       <if test="@Ognl@isNotEmpty(menuName)">
					AND MENU_NAME like '%${menuName}%'
				</if>
		       <if test="@Ognl@isNotEmpty(menuUrl)">
					AND MENU_URL like '%${menuUrl}%'
				</if>
		       <if test="@Ognl@isNotEmpty(parentId)">
					AND PARENT_ID like '%${parentId}%'
				</if>
		       <if test="@Ognl@isNotEmpty(menuOrder)">
					AND MENU_ORDER like '%${menuOrder}%'
				</if>
		       <if test="@Ognl@isNotEmpty(menuIcon)">
					AND MENU_ICON like '%${menuIcon}%'
				</if>
		       <if test="@Ognl@isNotEmpty(menuType)">
					AND MENU_TYPE like '%${menuType}%'
				</if>
	       
		</where>
	</sql>

	<!-- 总记录数 -->
	<select id="count" parameterType="com.ez.modules.system.entity.SysMenu" resultType="int">
		select count(0) from sys_menu
		<include refid="querywhere"/>
	</select>
	
	<!-- 新增 -->
	<insert id="addAll" parameterType="com.ez.modules.system.entity.SysMenu">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="id" >
        SELECT LAST_INSERT_ID() AS ID   
    </selectKey>
		INSERT INTO sys_menu (
        	MENU_NAME ,
        	MENU_URL ,
        	PARENT_ID ,
        	MENU_ORDER ,
        	MENU_ICON ,
        	MENU_TYPE 
        ) VALUES (
        	#{menuName} ,
        	#{menuUrl} ,
        	#{parentId} ,
        	#{menuOrder} ,
        	#{menuIcon} ,
        	#{menuType} 
        )
	</insert>
	
	<!-- 新增Selective -->
	<insert id="add" parameterType="com.ez.modules.system.entity.SysMenu">
	<selectKey resultType="java.lang.Integer"  order="AFTER" keyProperty="menuId" >
	        SELECT LAST_INSERT_ID() AS menuId
	</selectKey>
		INSERT INTO sys_menu 
		<include refid="addtrim"/>
	</insert>
	
	<sql id="addtrim">
	<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(menuId)">
				MENU_ID,
			</if>
			<if test="@Ognl@isNotEmpty(menuName)">
				MENU_NAME,
			</if>
			<if test="@Ognl@isNotEmpty(menuUrl)">
				MENU_URL,
			</if>
			<if test="@Ognl@isNotEmpty(parentId)">
				PARENT_ID,
			</if>
			<if test="@Ognl@isNotEmpty(menuOrder)">
				MENU_ORDER,
			</if>
			<if test="@Ognl@isNotEmpty(menuIcon)">
				MENU_ICON,
			</if>
			<if test="@Ognl@isNotEmpty(menuType)">
				MENU_TYPE,
			</if>
    </trim>
    <trim prefix=" values (" suffix=")" suffixOverrides="," >
			<if test="@Ognl@isNotEmpty(menuId)">
				#{menuId},
			</if>
			<if test="@Ognl@isNotEmpty(menuName)">
				#{menuName},
			</if>
			<if test="@Ognl@isNotEmpty(menuUrl)">
				#{menuUrl},
			</if>
			<if test="@Ognl@isNotEmpty(parentId)">
				#{parentId},
			</if>
			<if test="@Ognl@isNotEmpty(menuOrder)">
				#{menuOrder},
			</if>
			<if test="@Ognl@isNotEmpty(menuIcon)">
				#{menuIcon},
			</if>
			<if test="@Ognl@isNotEmpty(menuType)">
				#{menuType},
			</if>
    </trim>
	</sql>
	
	<!-- 删 -->
	<delete id="delete" parameterType="String">
		DELETE FROM sys_menu WHERE
        MENU_ID = #{id} 
	</delete>
	
	<!-- 根据主键查实体 -->
	<select id="getById" parameterType="String" resultMap="SysMenu" >
		SELECT <include refid="selectId" />
		    FROM sys_menu 
	        WHERE 
        MENU_ID = #{id} 
	</select>
	<select id="findAllByParentid" resultMap="SysMenu" >
		SELECT <include refid="selectId" />
		FROM sys_menu
		WHERE
		PARENT_ID = #{parentId}
		order by MENU_ORDER
	</select>
	<select id="findAllList" resultMap="SysMenu" >
		SELECT <include refid="selectId" />
		FROM sys_menu
	</select>
	<select id="getParentMenu" resultMap="SysMenu" parameterType="com.ez.modules.system.entity.SysMenu" useCache="false">
		SELECT <include refid="selectId" />
		FROM sys_menu
		WHERE
		PARENT_ID = "0"
		<if test="@Ognl@isNotEmpty(menuName)">
			AND MENU_NAME like '%${menuName}%'
		</if>
		<if test="@Ognl@isNotEmpty(menuId)">
			AND MENU_ID like '%${menuId}%'
		</if>
		<if test="@Ognl@isNotEmpty(menuType)">
			AND MENU_TYPE != '${menuType}'
		</if>
		order by MENU_ORDER
	</select>
	<select id="getChildrenMenu" resultMap="SysMenu" parameterType="com.ez.modules.system.entity.SysMenu" >
		SELECT <include refid="selectId" />
		FROM sys_menu
		WHERE
		PARENT_ID = #{parentId}
		<if test="@Ognl@isNotEmpty(menuName)">
			AND MENU_NAME like '%${menuName}%'
		</if>
		<if test="@Ognl@isNotEmpty(menuId)">
			AND MENU_ID like '%${menuId}%'
		</if>
		<if test="@Ognl@isNotEmpty(menuType)">
			AND MENU_TYPE != '${menuType}'
		</if>
		order by MENU_ORDER
	</select>
	<select id="findAllListMenu" resultMap="SysMenu" parameterType="com.ez.modules.system.entity.SysMenu">
		SELECT <include refid="selectId" />
		FROM sys_menu
		<if test="@Ognl@isNotEmpty(menuType)">
			WHERE MENU_TYPE != '${menuType}'
		</if>
		order by MENU_ORDER
	</select>
	<select id="findmenuids" resultType="string">
		SELECT MENU_ID
		FROM sys_menu
	</select>
	<select id="findAllMenuList" resultMap="SysMenu">
		SELECT <include refid="selectId" />
		FROM sys_menu
	</select>

    <!-- 更新all -->
	<update id="updateAll" parameterType="com.ez.modules.system.entity.SysMenu">
	    UPDATE sys_menu SET
	        MENU_NAME = #{menuName} ,
	        MENU_URL = #{menuUrl} ,
	        PARENT_ID = #{parentId} ,
	        MENU_ORDER = #{menuOrder} ,
	        MENU_ICON = #{menuIcon} ,
	        MENU_TYPE = #{menuType} 
        WHERE 
	        MENU_ID = #{menuId} 
	</update>
	
	<sql id="updateset">
	<set>
		<if test="@Ognl@isNotEmpty(menuName)">
			MENU_NAME = #{menuName},
		</if>
		<if test="@Ognl@isNotEmpty(menuUrl)">
			MENU_URL = #{menuUrl},
		</if>
		<if test="@Ognl@isNotEmpty(parentId)">
			PARENT_ID = #{parentId},
		</if>
		<if test="@Ognl@isNotEmpty(menuOrder)">
			MENU_ORDER = #{menuOrder},
		</if>
		<if test="@Ognl@isNotEmpty(menuIcon)">
			MENU_ICON = #{menuIcon},
		</if>
		<if test="@Ognl@isNotEmpty(menuType)">
			MENU_TYPE = #{menuType},
		</if>
    </set>
	</sql>
	
	<!-- 更新Selective -->
	<update id="modify" parameterType="com.ez.modules.system.entity.SysMenu">
	    UPDATE sys_menu 
		<include refid="updateset"/>
        WHERE 
	        MENU_ID = #{menuId} 
	</update>
	<!-- 查找唯一索引但不是主键的字段Selective -->
</mapper>

